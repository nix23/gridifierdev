<div class="controls">
    <div class="controlsHeading">
        <div class="leftSide">
            <div class="legend">
                <span class="legendPrefix">Grid</span> controls
            </div>

            <div class="button clearGridControl">
                Clear <span class="buttonTextHighlight">grid</span>
            </div>
        </div>

        <div class="rightSide">
            <div class="legend">
                <span class="legendPrefix">Item</span> controls
            </div>

            <div class="selector selectItemCssControl">
                <div class="text">
                    Border: <span class="borderValue selectorTextHighlight"></span>
                    Margin: <span class="marginValue selectorTextHighlight"></span>
                    <span class="boxSizingValue"></span>-<span class="selectorTextHighlight">box</span>
                </div>

                <div class="selectorIcon">
                </div>
            </div>
        </div>
    </div>

    <div class="controlsContent">
        <div class="leftSide">
            <div class="controlItem noRightBorder noBottomBorder topLeftControl">
                <div class="borderWrapper">
                    <div class="legend">
                        <div class="top">
                            <span class="highlightedText {{ legendHighlightedTextColorClass }}"></span> <span class="defaultText"></span>
                        </div>

                        <div class="bottom sublabelText">
                        </div>
                    </div>
                </div>
            </div>

            <div class="controlItem noBottomBorder topRightControl">
                <div class="borderWrapper">
                    <div class="legend">
                        <div class="top">
                            <span class="highlightedText {{ legendHighlightedTextColorClass }}"></span> <span class="defaultText"></span>
                        </div>

                        <div class="bottom sublabelText">
                        </div>
                    </div>
                </div>
            </div>

            <div class="controlItem noRightBorder noBottomBorder middleLeftControl">
                <div class="borderWrapper">
                    <div class="legend">
                        <div class="top">
                            <span class="highlightedText {{ legendHighlightedTextColorClass }}"></span> <span class="defaultText"></span>
                        </div>

                        <div class="bottom sublabelText">
                        </div>
                    </div>
                </div>
            </div>

            <div class="controlItem noBottomBorder middleRightControl">
                <div class="borderWrapper">
                    <div class="legend">
                        <div class="top">
                            <span class="highlightedText {{ legendHighlightedTextColorClass }}"></span> <span class="defaultText"></span>
                        </div>

                        <div class="bottom sublabelText">
                        </div>
                    </div>
                </div>
            </div>

            <div class="controlItem noRightBorder bottomLeftControl noBottomBorder">
                <div class="borderWrapper">
                    <div class="legend">
                        <div class="top">
                            <span class="highlightedText {{ legendHighlightedTextColorClass }}"></span> <span class="defaultText"></span>
                        </div>

                        <div class="bottom sublabelText">
                        </div>
                    </div>
                </div>
            </div>

            <div class="controlItem bottomRightControl noBottomBorder">
                <div class="borderWrapper">
                    <div class="legend">
                        <div class="top">
                            <span class="highlightedText {{ legendHighlightedTextColorClass }}"></span> <span class="defaultText"></span>
                        </div>

                        <div class="bottom sublabelText">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="rightSide">
            <div class="items">
                    <div style="float: left; width: 65px; height: 65px; background: blue; margin-left: 2%">
                    </div>
            </div>
        </div>
    </div>
</div>